<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary"><i>Product List</i></h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Product" asp-action="Upsert" class="btn btn-outline-dark">
                <i class="bi bi-plus-circle-fill"></i>&nbsp; Create New Product
            </a>
        </div>
    </div>
    <br /><br />

    <table id="data" class="table table-bordered table-striped text-center" style="width:100%;background-image:linear-gradient(grey,lightblue)">
        <thead>
            <tr>
                <th>Title</th>
                <th>Description</th>
                <th>ISBN</th>
                @*<th>Price</th>*@
                <th>Author</th>
                <th>Category</th>
                <th></th>
            </tr>
        </thead>
    </table>
</div>

@section Scripts{
    <script src="~/js/product.js"></script>
}
