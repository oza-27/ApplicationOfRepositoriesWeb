<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary"><i>Company List</i></h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Company" asp-action="Upsert" class="btn btn-outline-dark">
                <i class="bi bi-plus-circle-fill"></i>&nbsp; Create New Product
            </a>
        </div>
    </div>
    <br /><br />

    <table id="data" class="table table-bordered table-striped text-center" style="width:100%;background-image:linear-gradient(grey,lightblue)">
        <thead>
            <tr>
                <th>Name</th>
                <th>Address</th>
                <th>City</th>
                <th>State</th>
                <th>Phone Number</th>
                <th></th>
            </tr>
        </thead>
    </table>
</div>

@section Scripts{
    <script src="~/js/company.js"></script>
}
