@model IEnumerable<ApplicationOfRepositorie.Models.Product>

<div class="row pb-3">
    @foreach(var product in Model)
    {
        <div class="col-lg-3 col-md-6">
            <div class="p-2">
                <div class="col-12 p-1" style="border:2px solid black;border-radius:5px;border-color:darkgreen;color:darkolivegreen">
                    <div class="card" style="width:100%">
                        <img src="@product.ImageUrl" class="card-img-top rounded" />
                        <div class="card-body">
                            <div class="pl-1 text-center">
                                <p class="card-title h5 text-primary">@product.Title</p>
                                <p class="card-title text-info"> by <b>@product.Author</b></p>
                            </div>
                            <div class="pl-1 text-center">
                                <p class="card-title h5 text-primary">List Price: 
                                    <strike>
                                        <b>
                                            $@product.listPrice.ToString("0.00")
                                        </b>
                                    </strike>
                                </p>
                            </div>
                            <div class="pl-1 text-center">
                                <p class="card-title h5 text-primary">As Low As: 
                                    <b>
                                        $@product.Price100.ToString("0.00")
                                    </b>        
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

